description "flume hdfs sink service"
author      "Tolleiv Nietsch <tolleiv.nietsch@aoemedia.de>"

# used to be: start on startup
# until we found some mounts weren't ready yet while booting:
start on started mountall
stop on shutdown

# Automatically Respawn:
respawn
respawn limit 99 5

script
    # Not sure why $HOME is needed, but we found that it is:
    echo $$ > /var/run/flume-hdfs.pid
    exec sudo -u hdfs /usr/bin/flume-ng agent -f /etc/flume-ng/conf/flume-hdfs.conf -n agent-hdfs >> /var/log/flume-hdfs.log 2>&1
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/flume-hdfs.log
end script

pre-stop script
    rm /var/run/flume-hdfs.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >>  /var/log/flume-hdfs.log
end script
